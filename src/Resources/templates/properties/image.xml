<?xml version="1.0" ?>
<property xmlns="http://schemas.sulu.io/template/template"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns:xi="http://www.w3.org/2001/XInclude"
          xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd"
          name="image"
          type="single_media_selection"
>
    <meta>
        <title lang="en">Image</title>
        <title lang="fr">Image</title>
    </meta>

    <!-- Configuration simplifiée avec fallback consolidé -->
    <xi:include href='sulu-block-bundle://app-property-params/images.xml'
                xpointer='xmlns(sulu=http://schemas.sulu.io/template/template) xpointer(/sulu:params)'
                parse='xml'>
        <xi:fallback>
            <params>
                <!-- Paramètres d'ajustement d'images consolidés -->
                <xi:include href='sulu-block-bundle://app-property-params/images_config.xml'
                            parse='xml'>
                    <xi:fallback>
                        <param name="types" value="image"/>
                        <param name="displayOptions" type="collection">
                            <param name="top" value="true"/>
                            <param name="right" value="true"/>
                            <param name="left" value="true"/>
                            <param name="bottom" value="true"/>
                        </param>
                        <param name="defaultDisplayOption" value="top"/>
                    </xi:fallback>
                </xi:include>


                <xi:include href='sulu-block-bundle://app-property-params/images_additions.xml'
                            xpointer='xmlns(sulu=http://schemas.sulu.io/template/template) xpointer(/sulu:params/sulu:param)'
                            parse='xml'>
                    <xi:fallback/>
                </xi:include>
            </params>
        </xi:fallback>
    </xi:include>
</property>